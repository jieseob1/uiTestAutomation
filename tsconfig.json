{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "moduleResolution": "node",
  },
  "include": [
    "step-definitions/**/*.ts",
    "features/**/*.feature",
    "utils/**/*.ts",
    "constants/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}